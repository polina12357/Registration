<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_result"
    app:layout_dodgeInsetEdges="all"
    tools:context=".ResultFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/readyName"
        style="@style/menuRight"
        android:layout_width="380dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ready_to_start_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="66dp"
            android:text="@string/ready_to_start"
            android:textColor="@color/black"

            android:textSize="40sp" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/PlanName"
        style="@style/menuLeft"
        android:layout_width="300dp"
        android:layout_height="140dp"
        android:layout_marginTop="140dp"
        android:background="@color/white"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView android:id="@+id/it_s_your_plan_preview"
            android:fontFamily="@font/roboto"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="246dp"
            android:layout_height="122dp"
            android:text="@string/it_is_your_plan_preview"
            />
    </com.google.android.material.card.MaterialCardView>

    <!--In my android studio onClick is an error for some reason, but still works-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/start_button"
        style="@style/menuRight"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_marginTop="550dp"
        android:background="@color/white"
        android:visibility="visible"
        android:onClick="finishRegistration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/roboto"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="4"
            android:text="@string/start"
            android:textColor="@color/black"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="@+id/first_section_icon"
            app:layout_constraintStart_toStartOf="@+id/first_section_icon"
            app:layout_constraintTop_toTopOf="parent" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/appName"
        style="@style/menuLeft"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="300dp"
        android:background="@color/white"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView android:id="@+id/daily_calories"
            android:fontFamily="@font/roboto"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="46.5dp"
            android:text="@string/daily_calories"
            />



        <TextView android:id="@+id/daily_calories_textview"
            android:fontFamily="@font/roboto"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:layout_marginStart="260dp"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_1600_kcal"
            />

        <TextView android:id="@+id/goal"
            android:fontFamily="@font/roboto"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:layout_marginStart="25dp"
            android:layout_marginTop="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goal"
            />

        <TextView android:id="@+id/goal_textview"
            android:fontFamily="@font/roboto"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginStart="250dp"
            android:layout_marginTop="95dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weight_loss"
            />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>